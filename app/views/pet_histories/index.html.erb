<h1>Historial de la Mascota</h1>



<br>

<table class="table table-hover table-bordered">
  <thead class="text-center">
    <tr class="bg-primary text-white">
      <th>Nombre</th>
      <th>Peso</th>
      <th>Altura</th>
      <th>Descripción</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @pet_histories.each do |pet_history| %>
      <tr>
      <td><%= link_to pet.name, pet %></td>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.heigth %></td>
        <td><%= pet_history.description %></td>

        # <td> <% pet_histories.pet.each do |pet_history| %>
        #   <li> <%= history.created_at%></li>

    <% end %>
        

       
        <td><%= link_to 'Mostrar', pet_pet_history_path(@pet,pet_history.id) %></td>
        <td><%= link_to 'Editar', edit_pet_pet_history_path(@pet,pet_history.id) %></td>
        <td><%= link_to 'Eliminar', pet_pet_history_path(@pet,pet_history.id), method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



